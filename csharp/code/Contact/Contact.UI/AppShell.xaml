<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Contact.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Contact.UI.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <ShellContent
            Title="新增联系人"
            ContentTemplate="{DataTemplate views:AddContactPage}"
            Icon="contactnav.png" />

        <ShellContent
            Title="联系人详情"
            ContentTemplate="{DataTemplate views:ContactDetailPage}"
            Icon="contactnav.png" />

        <ShellContent
            Title="通讯录"
            ContentTemplate="{DataTemplate views:ContactPage}"
            Icon="contactnav.png" />

        <ShellContent
            Title="我"
            ContentTemplate="{DataTemplate views:MePage}"
            Icon="me.png" />

    </TabBar>

</Shell>
