<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Contact.UI.Views.AddContactPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AddContactPage">
    <VerticalStackLayout Spacing="10">

        <Frame Margin="20">
            <Entry Placeholder="联系人" />
        </Frame>

        <Grid Margin="20" ColumnDefinitions="50,*">
            <Label
                HorizontalOptions="Center"
                Text="手机"
                VerticalOptions="Center" />
            <Grid Grid.Column="1" RowDefinitions="*,50">
                <VerticalStackLayout>
                    <Label Text="1" />
                    <Label Text="2" />
                    <Label Text="3" />
                    <Label Text="4" />
                    <Label Text="5" />
                    <Label Text="6" />
                </VerticalStackLayout>
                <Button
                    Grid.Row="1"
                    Text="新增"
                    VerticalOptions="Center" />
            </Grid>
        </Grid>

    </VerticalStackLayout>
</ContentPage>